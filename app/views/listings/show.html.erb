<div class="container">
	<div class="row" style="display: flex;
    justify-content: center;">
		<div class="col-8" style="margin-top: 150px; background-color: white; padding: 32px;">
		  <div id="carouselExampleIndicators" class="carousel slide card-img-top" data-ride="carousel" data-interval="false">
			  <ol class="carousel-indicators">
			    <li data-target="#carouselExampleIndicators" data-slide-to="0" class="active"></li>
			    <li data-target="#carouselExampleIndicators" data-slide-to="1"></li>
			    <li data-target="#carouselExampleIndicators" data-slide-to="2"></li>
			  </ol>
			  <div class="carousel-inner">

			  	<% @listing.images_urls.each_with_index do |img_url, index| %>
				    <div class="carousel-item <%= index == 0 ? "active" : '' %>">
				      <%= image_tag img_url, :class => 'd-block w-100'%>
				    </div>
			  	<% end %>

			  </div>
			  <a class="carousel-control-prev" href="#carouselExampleIndicators" role="button" data-slide="prev">
			    <span class="carousel-control-prev-icon" aria-hidden="true"></span>
			    <span class="sr-only">Previous</span>
			  </a>
			  <a class="carousel-control-next" href="#carouselExampleIndicators" role="button" data-slide="next">
			    <span class="carousel-control-next-icon" aria-hidden="true"></span>
			    <span class="sr-only">Next</span>
			  </a>
			</div>
		  <div class="card-body">
		    <div>
				<p class="card-text">Location: <%= @listing.location%></p>
			</div>
			<div>
				<p class="card-text">Accomodates: <%= @listing.guest %></p>
			</div>
			<div>
				<p class="card-text">Room type: <%= @listing.room_type %></p>
			</div>
		   </div>
		   <% @reservation = Reservation.new %>
		   <%= render 'reservations/form' %>
		</div>
	</div>
</div>